            <div class="fitem">
                <label>绩效目标:</label>
                <input name="jixiaomubiao" id="cc_mubiao" data-options="multiline:true,icons:[]" class="easyui-textbox" style="width:70%; height: 60px" required>
            </div>

            <div class="fitem">
                <label>绩效优:</label>
                <input id="cc_you" name="jixiaoyou" data-options="icons:[]" class="easyui-textbox" style="width:70%; height: 30px">
            </div>

            <div class="fitem">
                <label>绩效良：</label>
                <input id="cc_liang" name="jixiaoliang" data-options="icons:[]" class="easyui-textbox" style="width:70%; height: 30px">
            </div>

            <div class="fitem">
                <label>绩效中:</label>
                <input id="cc_zhong" name="jixiaozhong" data-options="icons:[]" class="easyui-textbox" style="width:70%; height: 30px">
            </div>
            <div class="fitem">
                <label>绩效差:</label>
                <input id="cc_cha" name="jixiaocha" class="easyui-textbox" data-options="icons:[]" style="width: 70%; height: 30px">
            </div>
        </form>
    </div>
    <div id="jxcc_buttons" style="text-align:center;padding:5px">
        <a href="javascript:void(0)" class="easyui-linkbutton c6" data-options="iconcls:'icon-ok'" onclick="jxcc_save()" style="width:90px;">保存</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconcls:'icon-cancel'" onclick="javascript: $('#jxcc_dlg').dialog('close')" style="width:90px;">取消</a>
    </div>
    <hr />
    <table id="jxxl_dg" class="easyui-datagrid" title="成效指标" style="width:98%;height: auto;">
        <thead>
            <tr>
                <th data-options="field:'jixiaozhibiao',align:'center',width:'20%'">绩效指标</th>
                <th data-options="field:'jixiaomubiao',align:'center',width:'20%'">绩效目标</th>
                <th data-options="field:'jixiaoyou',align:'center',width:'15%'">优</th>
