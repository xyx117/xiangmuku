                    </tr>
                    <tr>
                        <td ><strong>产出:</strong></td>
                        <td><input id="xmchanchu" name="xmchanchu" type="text" class="easyui-textbox" data-options="multiline:true,icons:[]" style="width: 95%; height: 80px;" /></td>
                    </tr>
                    <tr>
                        <td ><strong>成效:</strong> </td>
                        <td><input id="xmchengxiao" name="xmchengxiao" type="text" class="easyui-textbox" data-options="multiline:true,icons:[]" style="width:95%; height: 80px;" /></td>
                    </tr>
                </table>

            </form>
            <div style="padding-top:10px">

                @if (xmgl_cccx == "0")
                {
                    <a href="javascript:void(0)" id="addcccx" class="easyui-linkbutton" style="width:70px;" onclick="add_cccx()">保存</a>
                }
                else
                {
                    <a href="javascript:void(0)" class="easyui-linkbutton" style="width:70px" onclick="add_cccx()">更新</a>
                }

            </div>
        </center>
    </div>
    <hr />
    <div>
        <p><img src="~/Content/image/shuoming.png" /><a href="~/Content/tianxieshuoming/chanchuxiaolv.htm" target="_blank" style="text-decoration:underline" title="产出及成效指标填写说明">填写说明</a></p>
    </div>

    <table id="jxcc_dg" class="easyui-datagrid" title="产出指标" style="width:98%;height:auto;">
        <thead>
            <tr>
                <th data-options="field:'jixiaozhibiao',align:'center',width:'20%'">绩效指标</th>
                <th data-options="field:'jixiaomubiao',align:'center',width:'20%'">绩效目标</th>
                <th data-options="field:'jixiaoyou',align:'center',width:'15%'">优</th>
                <th data-options="field:'jixiaoliang',align:'center',width:'15%'">良</th>
                <th data-options="field:'jixiaozhong',align:'center',width:'15%'">中</th>
                <th data-options="field:'jixiaocha',align:'center',width:'14%'">差</th>
            </tr>
        </thead>
    </table>

    <div id="jxcc_toolbar">
