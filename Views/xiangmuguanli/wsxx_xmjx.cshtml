        <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true" onclick="jxcc_edit()">编 辑</a>
        <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-remove',plain:true" onclick="jxcc_destroy()">删 除</a>
    </div>

    <div id="jxcc_dlg" class="easyui-dialog" style="width:50%;height:auto;padding:10px 20px" data-options="closed:'true',buttons:'#jxcc_buttons'">        
        <form id="jxcc_fm" method="post" novalidate>            
            <div class="fitem">
                <label>绩效指标:</label>
                <input name="jixiaozhibiao" id="cc_zhibiao" data-options="multiline:true,icons:[]" class="easyui-textbox" style="width:70%;height:60px" required> @*style="width:260px;height:60px;"*@
